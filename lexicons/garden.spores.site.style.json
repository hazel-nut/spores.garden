{
  "lexicon": 1,
  "id": "garden.spores.site.style",
  "defs": {
    "main": {
      "type": "record",
      "key": "self",
      "description": "Site style for spores.garden",
      "record": {
        "type": "object",
        "properties": {
          "theme": {
            "type": "ref",
            "ref": "#theme",
            "description": "Theme configuration"
          },
          "customCss": {
            "type": "string",
            "maxLength": 50000,
            "description": "Custom CSS styles"
          }
        }
      }
    },
    "theme": {
      "type": "object",
      "properties": {
        "preset": {
          "type": "string",
          "knownValues": ["minimal", "dark", "bold", "retro"],
          "description": "Base theme preset"
        },
        "colors": {
          "type": "object",
          "properties": {
            "background": { "type": "string" },
            "text": { "type": "string" },
            "primary": { "type": "string" },
            "accent": { "type": "string" }
          },
          "description": "Color overrides"
        },
        "fonts": {
          "type": "object",
          "properties": {
            "heading": { "type": "string" },
            "body": { "type": "string" }
          },
          "description": "Font overrides"
        },
        "borderStyle": {
          "type": "string",
          "knownValues": ["solid", "dashed", "dotted", "double", "groove"],
          "description": "Border style"
        },
        "borderWidth": {
            "type": "string"
        }
      }
    }
  }
}
