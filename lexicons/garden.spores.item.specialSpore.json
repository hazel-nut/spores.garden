{
  "lexicon": 1,
  "id": "garden.spores.item.specialSpore",
  "defs": {
    "main": {
      "type": "record",
      "description": "A special spore item that can be collected and stolen by other users.",
      "key": "self",
      "record": {
        "type": "object",
        "required": ["ownerDid", "lastCapturedAt", "history"],
        "properties": {
          "ownerDid": {
            "type": "string",
            "format": "did"
          },
          "lastCapturedAt": {
            "type": "string",
            "format": "datetime"
          },
          "history": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["did", "timestamp"],
              "properties": {
                "did": { "type": "string", "format": "did" },
                "timestamp": { "type": "string", "format": "datetime" }
              }
            }
          }
        }
      }
    }
  }
}
